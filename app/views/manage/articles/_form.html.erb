<%= simple_form_for([:admin, @article], :html => { :class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, :input_html => { :class => 'span6'} %>
    <%= f.input :author %>
    <%= f.input :published_at %>
    <%= f.input :image, :as => :file %>
    <%= f.input :content, as: :text, :input_html => { :rows => 7 , :style => 'width: 100%'} %>
    <%= f.input :status, :input_html => { :class => 'span3' }, :collection => { 1 => "Published", 2 => "Draft" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

