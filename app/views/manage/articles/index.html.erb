<div class="row one-column">

  <div class="span12">

    <h3>Manage Crossway Blog</h3>
  </div>
  
</div>

<table class="table table-striped">
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Post date</th>
    <th></th>
  </tr>

<% @articles.each do |article| %>
  <tr>
    <td><%= article.title %></td>
    <td><%= article.author %></td>
    <td><%= article.published_at %></td>
    <td>
      <%= link_to 'Edit', edit_admin_article_path(article), :class => 'btn' %>&nbsp;
      <%= link_to 'Destroy', admin_article_path(article), method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn' %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Blog Article', new_admin_article_path, :class => 'btn btn-primary' %>
