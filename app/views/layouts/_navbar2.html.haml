/ Fixed navbar
.navbar.navbar-default.navbar-fixed-top{role: "navigation"}
  .container
    .navbar-header
      %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", type: "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to root_path, html_options = { :class => 'crossway-brand' } do
        = image_tag("crossway-logo.png", class: "mini-logo") 
    .navbar-collapse.collapse
      %ul.nav.navbar-nav
        -#= navbar_list_item "HOME", root_path
        = navbar_list_item "VISIT", visit_path
        = navbar_list_item "GOD", god_path
        %li{class: current_page?(connect_path) ? 'dropdown active' : 'dropdown'}
          = link_to "#", class: "dropdown-toggle", :"data-toggle" => "dropdown" do
            CONNECT <b class='caret'></b>
          %ul{class: "dropdown-menu"}
            %li
              = link_to "Community Groups", :controller => 'site', :action => 'community_groups'
            %li
              = link_to "Children & Families", :controller => 'site', :action => 'family_ministries'
            %li
              = link_to "Resources", resources_path
            %li
              = link_to "The City", :controller => 'site', :action => 'the_city'
            %li
              = link_to "Get Involved", :controller => 'site', :action => 'creative_ministries'
        = navbar_list_item "GIVE", give_path
        %li{class: current_page?(identity_path) ? 'dropdown active' : 'dropdown'}
          = link_to "#", class: "dropdown-toggle", :"data-toggle" => "dropdown" do
            ABOUT <b class='caret'></b>
          %ul{class: "dropdown-menu"}
            %li
              = link_to "Statement of Faith", :controller => 'site', :action => 'statement_of_faith'
            %li
              = link_to "Covenant Membership", :controller => 'site', :action => 'covenant_membership'
            %li
              = link_to "Partnerships", :controller => 'site', :action => 'partnerships'
            %li
              = link_to "Leadership", people_path
      %ul.nav.navbar-nav.navbar-right
        = navbar_list_item "Member Login", "https://crosswaycc.onthecity.org", :target => "blank"
