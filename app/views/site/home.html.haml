.section
  .container
    .row
      .col.xs-12.col-md-10.col-md-offset-1
        .row
          .col-md-6
            %table.events-list
              %thead
                %tr
                  %th{colspan: "3"}
                    %h4
                      = link_to "From the Blog", articles_path
              %tbody
                - @articles.each do |article|
                  %tr
                    %td
                      .event-date
                        .event-day
                          = article.published_at.strftime("%d")
                        .event-month
                          = article.published_at.strftime("%b")
                    %td
                      = link_to article.title, article
                    %td
                      = link_to "Read More", article, :class => "btn btn-grey btn-sm event-more"
          .col-md-6
            %table.events-list
              %thead
                %tr
                  %th{colspan: "3"}
                    %h4 
                      = link_to "Latest News", news_path
              %tbody
                - @entries.each do |entry|
                  %tr
                    %td
                      .event-date
                        .event-day
                          = entry.published.strftime("%d")
                        .event-month
                          = entry.published.strftime("%b")
                    %td
                      = link_to entry.title, entry.url
                    %td
                      = link_to "Read More", entry.url, :class => "btn btn-grey btn-sm event-more"