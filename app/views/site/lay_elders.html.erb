<ul class="breadcrumb">
  <li><%= link_to "Home", root_path %> <span class="divider">/</span></li>
  <li><%= link_to "Identity", identity_path %> <span class="divider">/</span></li>
  <% if @elder_profile %>
  <li><%= link_to "Lay Elders", :controller => "site", :action => "lay_elders" %> <span class="divider">/</span></li>
    <li class="active"><%= @elder_profile.name %></li>
  <% else %>
    <li class="active">Lay Elders</li>
  <% end %>

</ul>

<% if @elder_profile %>

  <div class="row">

    <div class="span3">
      <% if @elder_profile.image_url %>
        <%= image_tag(@elder_profile.image_url) %>
      <% else %>
        <img src="http://placehold.it/200x160" alt="">
      <% end %>
    </div>
    <div class="span6">
      <h2><%= @elder_profile.name %></h2>
      <p><%= @elder_profile.title %></p>
    </div>

    <div class="span3">

      <div class="aside">
        <h5>Lay Elders</h5>

        <ul class="unstyled">
          <% @lay_elders.each do |lay_elder| %>
          <li style="margin-bottom: 10px;"><i class="icon-chevron-right"></i>&nbsp;<%= link_to lay_elder.name, { :controller => "site", :action => "lay_elders", :id => lay_elder.id } %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="span12">
      <%= @elder_profile.content %>
    </div>
  </div>

<% else %>

<h2>Lay Elders</h2>

<div class="row">
  <% row_count = 0 %>

  <% @lay_elders.each do |lay_elder| %>

    <div class="span3">
      <ul class="thumbnails">
        <li class="span3">
          <%= link_to({ :controller => "site", :action => "lay_elders", :id => lay_elder.id }, { :class => "thumbnail" }) do %>
            <% if lay_elder.image_url %>
              <%= image_tag(lay_elder.image_url) %>
            <% else %>
              <img src="http://placehold.it/200x160" alt="">
            <% end %>

            <h4><%= lay_elder.name %></h4>
            <p><%= lay_elder.title %></p>
          <% end %>
        </li>
      </ul>
    </div>

    <% if (((row_count+=1) % 4) == 0) %>
      </div>
      <div class="row">
    <% end %>

  <% end %>
</div>

</div>

<% end %>

