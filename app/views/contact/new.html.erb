%ul.breadcrumb
  %li
    = link_to "Home", root_path
    %span.divider /
  %li.active Contact Us
%h2 Contact Us
%hr/
.row.one-column
  .span8
    = simple_form_for @contact_form, :url => contact_path, :html => { :class => 'form-horizontal' }  do |f|
      = f.error_notification
      .form-inputs
        = f.input :name
        = f.input :email
        = f.input :content, :as => :text, :label => 'Message', :input_html => {  :class => 'span5', :rows => 6 }
      .form-actions
        = f.button :submit, "Send Message"
  .span4
    .well
      %h3 Church Office
      %address
        \#201 - 20334 56th Ave.
        %br/
        Langley, B.C.
      %h4 Email
      info@crossway.ca
      %h4 Phone
      604-510-6002
      %h4 Office Hours
      Monday - Thursday, 9am - 4pm