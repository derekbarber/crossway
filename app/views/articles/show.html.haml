- content_for :head, auto_discovery_link_tag(:atom, articles_url(format: "atom"))
%ul.breadcrumb
  %li
    = link_to "Home", root_path
    %span.divider /
  %li
    = link_to "Resources", root_path
    %span.divider /
  %li
    = link_to "Blog", articles_path
    %span.divider /
  %li.active= @article.title
.row
  .col-sm-8.blog-main
    .blog-post
      %h2.blog-post-title= @article.title
      %p.blog-post-meta
        by #{@article.author} | #{@article.published_at.strftime("%B %d, %Y")}
      %div
        = image_tag @article.image_url if @article.image?
      = simple_format(@article.content, {}, {:sanitize => false})

  .col-sm-3.col-sm-offset-1.blog-sidebar
    .sidebar-module.sidebar-module-inset
      = link_to articles_url(format: "atom"), :class => "btn btn-small" do
        %i.icon-rss>
        \ Subscribe to Blog
      %p
        %a.btn.btn-small{"data-lang" => "en", href: "https://twitter.com/share?url=#{articles_url(@article)}", style: "width: 80px;"}
          %i.icon-twitter>
          \ Tweet

      %h5 Recent Blog Entries
      %ul.unstyled
        - @articles.each do |article|
          %li{style: "margin-bottom: 10px;"}
            %i.icon-chevron-right>
            \ #{link_to article.title, article}
