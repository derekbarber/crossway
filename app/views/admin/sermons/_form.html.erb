<%= simple_form_for(@sermon) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :sermon_series_id %>
    <%= f.input :date %>
    <%= f.input :scripture_reference %>
    <%= f.input :description %>
    <%= f.input :speaker %>
    <%= f.input :audio_file %>
    <%= f.input :video_embed %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
