<%= simple_form_for([:admin, @sermon], :html => { :class => 'form-horizontal', :multipart => true }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :sermon_series_id, :label => 'Sermon Series', :collection => @sermon_series %>
    <%= f.input :date %>
    <%= f.input :scripture_reference %>
    <%= f.input :description, :input_html => { :class => 'input-xlarge', :rows => 5 } %>
    <%= f.input :speaker %>
    <%= f.input :audio_file, :as => :file %>
    <%= f.input :audio_file_duration, :label => "Audio Duration (MM:SS)" %>
    <%= f.input :video_embed, :input_html => { :class => 'input-xlarge', :rows => 1 } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
