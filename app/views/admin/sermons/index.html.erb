<h1>Listing sermons</h1>

<table class="table table-striped" id="sermons" data-source"<%= admin_sermons_url(format: "json") %>">
<thead>
  <tr>
    <th>Title</th>
    <th>Sermon series</th>
    <th>Date</th>
    <th>Scripture reference</th>
    <th>Speaker</th>
    <th></th>
  </tr>
</thead>
<tbody>
<% @sermons.each do |sermon| %>
  <tr>
    <td><%= sermon.title %></td>
    <td><%= sermon.sermon_series_id %></td>
    <td><%= sermon.date %></td>
    <td><%= sermon.scripture_reference %></td>
    <td><%= sermon.speaker %></td>
    <td>
      <%= link_to 'Edit', edit_admin_sermon_path(sermon), :class => 'btn' %>&nbsp;
      <%= link_to 'Destroy', admin_sermon_path(sermon), method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn' %>
    </td>
  </tr>
<% end %>
</tbody>
</table>

<br />

<%= link_to 'New Sermon', new_admin_sermon_path, :class => 'btn btn-primary' %>
