<h1>Manage Profiles</h1>

<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th>Title</th>
    <th>Type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @people.each do |person| %>
  <tr>
    <td><%= person.name %></td>
    <td><%= person.title %></td>
    <td><%= person.role_text %></td>
    <td><%= link_to 'Show', admin_person_path(person), :class => 'btn'  %></td>
    <td><%= link_to 'Edit', edit_admin_person_path(person), :class => 'btn' %></td>
    <td><%= link_to 'Destroy', admin_person_path(person), method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn' %></td>
  </tr>
<% end %>
</table>

