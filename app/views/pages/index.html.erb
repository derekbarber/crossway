<h1>Pages</h1>

<table class="table table-striped">
  <tr>
    <th>Title</th>
    <th>Permalink</th>
    <th></th>
  </tr>

<% @pages.each do |page| %>
  <tr>
    <td><%= page.title %></td>
    <td>/<%= page.permalink %></td>
    <td>
      <%= link_to 'Show', page, :class => 'btn' %>
      <%= link_to 'Edit', edit_page_path(page), :class => 'btn' %>
      <%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn' %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Page', new_page_path, :class => 'btn' %>